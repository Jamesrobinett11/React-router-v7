# Copy this to .env (or add each variable to your host/Replit secrets)
# - Do NOT commit your real API keys or passwords.
# - ADMIN_TOKEN should be a long random string for the admin UI.

# Server
PORT=3000
APP_DOMAIN=localhost   # used to form default SENDER_EMAIL when SENDER_EMAIL not provided

# Email / contact
CONTACT_EMAIL=jamesrobinett@aol.com   # recipient for contact form submissions
SENDER_EMAIL=no-reply@localhost       # From address used when sending mail

# Admin
ADMIN_TOKEN=change_this_to_a_real_token

# Storage
DATABASE_PATH=./data/submissions.sqlite

# SendGrid (preferred if you have it) - if present, SendGrid is used
SENDGRID_API_KEY=

# SMTP fallback (used when SENDGRID_API_KEY is empty)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
